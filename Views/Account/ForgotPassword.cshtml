@model ForgetpasswordViewModel

<hr><br>

<div class="container">
    <form method="post" asp-controller="Account" asp-action="ForgotPassword">
    <div class="text-dange" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <input asp-for="@Model.Email" class="form-control" placeholder="Email kiriting">
