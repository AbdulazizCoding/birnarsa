@model SignUpViewModel

<section class="signup">
    <div class="container1">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form method="post" class="register-form" id="register-form" asp-controller="Account" asp-action="Register">
                    <input hidden="true" asp-for="@Model.ReturnUrl">
                    <div class="form-group">
                        <label asp-for="@Model.Fullname" for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="@Model.Fullname" type="text" name="name" id="name" placeholder="Your Name"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email" for="email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="@Model.Email" type="email" name="email" id="email" placeholder="Your Email"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UserName" for="username"><i class="zmdi zmdi-username"></i></label>
                        <input asp-for="@Model.UserName" type="text" name="username" id="username" placeholder="Your Username"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Password" ><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="@Model.Password" type="password" placeholder="Password"/>
                    </div>
                    @* <div class="form-group">
                        <label asp-for="@Model.RePassword" for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="@Model.RePassword" type="password" name="re_pass" id="re_pass" placeholder="Repeat your password"/>
                    </div> *@
                    @* <div class="form-group">
                        <label asp-for="@Model.Avatar" class="form-label avatar_label">Avatar</label>
                        <input style="opacity: 0 !important;" type="file" accept="image/*" asp-for="@Model.Avatar" class="form-control">
                    </div> *@
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register"/>
                    </div>
                    <p><a href="">Telegram</a> orqali to'yxatdan o'ting</p>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/Image/signup-image.jpg" alt="sing up image"></figure>
                <a class="signup-image-link" asp-controller="account" asp-action="login">I am already member</a>
            </div>
        </div>
    </div>
</section>